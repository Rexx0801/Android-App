<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/hinhnen">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tìm kiếm theo tên:"
        android:textColor="#B4000000"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"/>
    <SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconifiedByDefault="false"
        app:queryHint="Nhập tên mặt hàng"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tìm kiếm theo ngày:"
        android:textColor="#B4000000"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/eFrom"
        android:textSize="12dp"
        android:hint="Từ ngày"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColorHint="#AAAAAA"
        />
    <EditText
        android:id="@+id/eTo"
        android:textSize="12dp"
        android:hint="Đến ngày"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#AAAAAA"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tìm kiếm theo danh mục:"
        android:textColor="#B4000000"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Spinner
            android:id="@+id/spCategory"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <Spinner
            android:id="@+id/spCondition"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btSearch"
            android:layout_weight="1"
            android:text="Search"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btStatistic"
            android:layout_weight="1"
            android:text="Thống kê"
            android:background="@drawable/button"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvTong"
        android:textColor="@color/yellow"
        android:text="Kết quả: "
        android:textSize="17dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>